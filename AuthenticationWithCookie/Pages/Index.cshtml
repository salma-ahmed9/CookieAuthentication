@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@if(!User.Identity.IsAuthenticated)
{
   <div class="card" style="padding:7px;">
         <div class="card-body" style="width:200px;">
              <form method="post">
                <div class="username" style="margin:10px;">
                    <label class="myusername">Username</label>
                    <input type="text" name="LoginInput.Username" required title="Please enter your correct username" />
                </div>

                <div class="password" style="margin:10px;">
                    <label class="mypassword">Password</label>
                    <input type="password" name="LoginInput.Password" required title="Please enter your correct password" />
                </div>

                <div class="login" style="margin:10px;">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger no-bullet" style="width:300px; ">
                </div>
                <style>
                    .no-bullet ul, .no-bullet ol {
                        list-style: none;
                    }
                </style>
              </form>
         </div>
   </div>

}
else
{
    <h4>Welcom @User.Identity.Name . you have successfully logged in !</h4>
    <form method="post" asp-page-handler="LoggingOut">
        <button type="submit" class="btn btn-primary">Log out</button>
    </form>

}


