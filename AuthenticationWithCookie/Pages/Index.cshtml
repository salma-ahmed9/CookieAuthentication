@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@if(!User.Identity.IsAuthenticated)
{
   <div class="card" style="padding:7px;">
         <div class="card-body" style="width:200px;">
              <form method="post">
                <div class="username" style="margin:10px;">
                    <label class="myusername">Username</label>
                    <input type="text" name="myUsername" required title="Please enter your correct username" />
                </div>

                <div class="password" style="margin:10px;">
                    <label class="mypassword">Password</label>
                    <input type="password" name="myPassword" required title="Please enter your correct password" />
                </div>

                <div class="login" style="margin:10px;">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
              </form>
         </div>
   </div>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="text-danger">@Model.ErrorMessage</p>
    }

}
else
{
    <h4>Welcom @User.Identity.Name . you have successfully logged in !</h4>
    <form method="post" asp-page-handler="LoggingOut">
        <button type="submit" class="btn btn-primary">Log out</button>
    </form>

}


